@model Survey_System.Models.Question
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="card-title">Soru Düzenleme Sayfası</div>
        <hr>
        <form action="/Question/Edit" method="post">
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="form-group">
                <label for="input-1">SORU CÜMLESİ</label>
                <input type="text" class="form-control" name="QuestionLine" id="input-1" placeholder="Soru yazınız" maxlength="250" 
                       required value="@Model.QuestionLine">
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-dribbble btn-primary px-5"><i class="flag-icon-zw"></i> Kaydet </button>
            </div>
        </form>
    </div>
</div>

